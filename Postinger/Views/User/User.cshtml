@model IEnumerable<Postinger.Models.UserViewModel>

@{
    ViewData["Title"] = "Post";
}
    <head>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.8/angular.min.js" type="text/javascript"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js" type="text/javascript"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

        <script src="~/js/UserCtrl.js"></script>
        <script>
            $('#myModal').on('shown.bs.modal', function () {
                $('#myInput').trigger('focus')
            })
        </script>
    </head>

<h1>Usuarios</h1>
<style>
    .fotoUsuario{
        width: 50px;
        height: 50px;
        border-radius: 100%;
    }

    #contenedor {
        display: flex;
        flex-direction: column;
    }

    .userDiv {
        background-color: red;
        margin: 1% 30%;
        padding: 3%;
    }

    body{
        background-color: #141518 !important;
    }
</style>


<div ng-app="PostApp" ng-controller="UserController" ng-init="init()">
    <div id="contenedor">
        <div ng-repeat="user in usersList" class="userDiv">
            <div>
                {{user}}
            </div>
        </div>
    </div>
</div>
